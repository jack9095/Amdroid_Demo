<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".MainActivity" >

<!--    背景五角星-->
    <ImageView
        android:id="@+id/wujiaoxing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_margin="0dp"
        android:src="@drawable/wujiaoxing" />

<!--    顶部的图片-->
    <ImageView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/shopwhite" />

<!--    右边的图片-->
    <ImageView
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/fanswhite" />

<!--    左边的图片-->
    <ImageView
        android:id="@+id/news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/newswhite" />

<!--左下角图片-->
    <ImageView
        android:id="@+id/trails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/trailswhite" />

<!--    右下角图片-->
    <ImageView
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/expressionwhite" />

<!--    中间图片-->
    <ImageView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/head_gray" />

    <ImageView
        android:id="@+id/istartlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:src="@drawable/istar" />

</RelativeLayout>