<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/danmu_setting"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/danmu_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/danmu_font_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弹幕字号"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/sh_bilibili_panel_item_select_bg"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="大"
            android:textColor="#CC4E4E"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/sh_bilibili_panel_item_bg"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="小"
            android:textColor="#999999"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/danmu_location"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/danmu_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弹幕位置"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/sh_bilibili_panel_item_select_bg"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="上"
            android:textColor="#CC4E4E"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/sh_bilibili_panel_item_bg"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="中"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/sh_bilibili_panel_item_bg"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:text="下"
            android:textColor="#999999"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/color_for_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/color_for_p_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弹幕颜色"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/color_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/color_for_p_title"
            android:background="@drawable/sh_bilibili_panel_item_select_bg">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_blue_bright" />

        </RelativeLayout>


        <View
            android:id="@+id/color_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_1"
            android:background="@android:color/holo_green_dark" />

        <View
            android:id="@+id/color_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_2"
            android:background="@android:color/holo_orange_light" />

        <View
            android:id="@+id/color_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_3"
            android:background="@android:color/holo_purple" />

        <View
            android:id="@+id/color_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/color_1"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/color_for_p_title"
            android:background="@android:color/holo_red_dark" />

        <View
            android:id="@+id/color_6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/color_5"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/color_5"
            android:background="@android:color/holo_red_light" />

        <View
            android:id="@+id/color_7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/color_5"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_6"
            android:background="@android:color/holo_green_light" />

        <View
            android:id="@+id/color_8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/color_5"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_7"
            android:background="@android:color/holo_blue_dark" />


        <View
            android:id="@+id/color_9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/color_5"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/color_for_p_title"
            android:background="@android:color/holo_orange_light" />

        <View
            android:id="@+id/color_10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/color_9"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/color_9"
            android:background="#15E121" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/color_for_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/color_for_l_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弹幕颜色"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/color_1_h"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/color_for_l_title"
            android:background="@drawable/sh_bilibili_panel_item_select_bg">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_blue_bright" />

        </RelativeLayout>


        <View
            android:id="@+id/color_2_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_1_h"
            android:background="@android:color/holo_green_dark" />

        <View
            android:id="@+id/color_3_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_2_h"
            android:background="@android:color/holo_orange_light" />

        <View
            android:id="@+id/color_4_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_3_h"
            android:background="@android:color/holo_purple" />

        <View
            android:id="@+id/color_5_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_4_h"
            android:background="@android:color/holo_red_dark" />

        <View
            android:id="@+id/color_6_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_5_h"
            android:background="@android:color/holo_red_light"  />

        <View
            android:id="@+id/color_7_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_6_h"
            android:background="@android:color/holo_green_light"  />

        <View
            android:id="@+id/color_8_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_7_h"
            android:background="@android:color/holo_blue_dark"  />


        <View
            android:id="@+id/color_9_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_8_h"
            android:background="@android:color/holo_orange_light"  />

        <View
            android:id="@+id/color_10_h"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/color_9_h"
            android:background="#15E121" />

    </RelativeLayout>

</LinearLayout>