<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        app:tl_textSelectColor="#333333"
        app:tl_textUnSelectColor="#666666"
        app:tl_indicator_color="#ff4338"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_margin_bottom="7dp"
        app:tl_tab_padding="12dp"
        app:tl_indicator_width="18dp"
        app:tl_textBold="SELECT"
        app:tl_textSelectSize="14dp"
        app:tl_textUnSelectSize="14dp"
 />

    <!-- app:tl_underline_color="#1A000000"
    app:tl_underline_gravity="TOP"
    app:tl_underline_height="1dp" -->

    <com.flyco.tablayout.SlidingScaleTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        app:tl_indicator_color="@color/colorAccent"
        app:tl_indicator_corner_radius="3dp"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="7dp"
        app:tl_openTextDmg="false"
        app:tl_tab_marginBottom="8dp"

        app:tl_tab_padding="15dp"
        app:tl_tab_vertical_gravity="Bottom"
        app:tl_textBold="SELECT"

        app:tl_textSelectColor="@color/colorAccent"
        app:tl_textSelectSize="15sp"
        app:tl_textUnSelectColor="@color/colorPrimaryDark"
        app:tl_textUnSelectSize="14sp" />

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

</LinearLayout>