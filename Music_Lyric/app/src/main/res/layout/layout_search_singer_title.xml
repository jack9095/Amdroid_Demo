<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/defColor"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/backImg"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/base_button"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@mipmap/aiv" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/right_flag"
            android:layout_toRightOf="@+id/backImg">

            <com.kuanquan.music_lyric.widget.IconfontTextView
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/title_search"
                android:textColor="#fff"
                android:textSize="@dimen/title_icon_size" />

            <com.kuanquan.music_lyric.widget.SearchEditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="40dp"
                android:paddingRight="@dimen/title_height"
                android:singleLine="true"
                android:textColor="#fff"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="15dp" />


            <com.kuanquan.music_lyric.widget.IconfontTextView
                android:id="@+id/clean_img"
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/clean_img"
                android:textColor="#fff"
                android:textSize="@dimen/title_icon_size"
                android:visibility="invisible" />

        </RelativeLayout>


        <TextView
            android:id="@+id/right_flag"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="@dimen/title_size"></TextView>
    </RelativeLayout>


</merge>
