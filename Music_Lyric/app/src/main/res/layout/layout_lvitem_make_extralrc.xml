<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <com.kuanquan.music_lyric.widget.ListItemRelativeLayout
        android:id="@+id/itemBG"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:text="00"
            android:textColor="@color/def_bar_title_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/index"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lineLyrics"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:singleLine="true"
                android:text="@string/def_songName"
                android:textColor="@color/def_bar_title_color"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/extraLineLyrics"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:singleLine="true"
                android:text="@string/def_artist"
                android:textColor="@color/def_bar_title_color"
                android:textSize="12dp" />


        </LinearLayout>

    </com.kuanquan.music_lyric.widget.ListItemRelativeLayout>

</LinearLayout>
